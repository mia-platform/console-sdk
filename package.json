{
  "name": "console-sdk",
  "license": "Apache-2.0",
  "private": true,
  "sideEffects": false,
  "workspaces": [
    "packages/microfrontend-sdk",
    "packages/vite-helpers-console-microfrontend",
    "packages/webpack-helpers-console-microfrontend"
  ],
  "devDependencies": {
    "@mia-platform/eslint-config-mia": "^3.0.0",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "@types/jest": "^29.5.11"
  },
  "dependencies": {},
  "scripts": {
    "sdk": "pnpm --filter @mia-platform/microfrontend-sdk",
    "vh": "pnpm --filter @mia-platform/vite-helpers-console-microfrontend",
    "wh": "pnpm --filter @mia-platform/webpack-helpers-console-microfrontend",
    
    "build": "pnpm sdk build && pnpm vh build && pnpm wh build",
    "test": "pnpm sdk test && pnpm vh test && pnpm wh test",
    "lint:fix": "pnpm sdk lint --fix && pnpm vh lint --fix && pnpm wh lint --fix",
    "lint": "pnpm sdk lint && pnpm vh lint && pnpm wh lint",

    "addlicense": "addlicense -c 'Mia srl' -s packages/*/src/**/*.ts",
    "check-license": "addlicense -c 'Mia srl' -check -s packages/*/src/**/*.ts",
    "changeset": "changeset"
  },
  "version": "0.0.0",
  "contributors": [
    "Daniele Cin√† <daniele.cina@mia-platform.eu>",
