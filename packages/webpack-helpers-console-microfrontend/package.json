{
  "name": "@mia-platform/webpack-helpers-console-microfrontend",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "main": "./build/src/index.js",
  "module": "./src/index.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rm -rf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "unit": "jest"
  },
  "dependencies": {
    "@mia-platform/microfrontend-sdk": "workspace:*",
    "vite-plugin-qiankun": "1.0.15"
  },
  "devDependencies": {
    "@types/ramda": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=v18.18.2"
  },
  "homepage": "https://github.com/mia-platform/console-sdk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mia-platform/console-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/mia-platform/console-sdk/issues"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.+(ts)",
      "**/?(*.)+(spec|test).+(ts)"
    ],
    "moduleNameMapper": {
      "@mia-platform/microfrontend-sdk": "<rootDir>/../microfrontend-sdk/src/index.ts"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {
        "tsconfig": "<rootDir>/tsconfig.json"
      }]
    }
  }
}